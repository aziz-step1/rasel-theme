
{# سلايدر رسيل مخصص بثلاث شرائح قابلة للتخصيص #}
<div class="relative w-full overflow-hidden">
  <div class="swiper rasel-slider">
    <div class="swiper-wrapper">
      {% for slide in fields.slides %}
        <div class="swiper-slide">
          <div class="relative h-[300px] md:h-[500px] bg-cover bg-center flex items-center justify-center text-center"
               style="background-image: url('{{ slide.image }}');">
            <div class="bg-black/40 w-full h-full absolute top-0 start-0 z-0"></div>
            <div class="relative z-10 text-white px-6 md:px-12">
              <h2 class="text-xl md:text-4xl font-bold mb-4">{{ slide.title }}</h2>
              <p class="text-sm md:text-lg mb-6">{{ slide.subtitle }}</p>
              {% if slide.button_text and slide.button_link %}
                <a href="{{ slide.button_link }}"
                   class="inline-block bg-white text-black px-6 py-2 rounded-full text-sm font-semibold hover:bg-gray-200 transition">
                  {{ slide.button_text }}
                </a>
              {% endif %}
            </div>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</div>
