
{# سلايدر رسيل: تصميم فخم ومتجاوب باستخدام Tailwind CSS #}
<div class="relative w-full">
  {% if fields.slides %}
    <div class="swiper rasel-swiper">
      <div class="swiper-wrapper">
        {% for slide in fields.slides %}
          <div class="swiper-slide">
            <div class="relative h-[280px] sm:h-[400px] md:h-[550px] bg-cover bg-center flex items-center justify-center text-center"
                 style="background-image: url('{{ slide.image }}');">
              <div class="absolute inset-0 bg-black/40"></div>
              <div class="relative z-10 text-white px-4 md:px-12">
                <h2 class="text-2xl md:text-5xl font-bold mb-3">{{ slide.title }}</h2>
                <p class="text-base md:text-lg mb-6">{{ slide.subtitle }}</p>
                {% if slide.button_text and slide.button_link %}
                  <a href="{{ slide.button_link }}"
                     class="inline-block bg-white text-black font-semibold px-6 py-2 rounded-full hover:bg-gray-200 transition">
                    {{ slide.button_text }}
                  </a>
                {% endif %}
              </div>
            </div>
          </div>
        {% endfor %}
      </div>
      <!-- نقاط التبديل -->
      <div class="swiper-pagination mt-4 text-center"></div>
    </div>
  {% else %}
    <div class="bg-gray-100 text-center text-gray-500 py-16 rounded-xl">لم يتم إعداد السلايدر بعد</div>
  {% endif %}
</div>
