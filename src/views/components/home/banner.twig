
{% set style = settings.banner_style %}

{% if style == 'image_only' %}
  <div class="rasel-banner">
    <img src="{{ settings.image }}" alt="بنر">
  </div>
{% elseif style == 'with_text' %}
  <div class="rasel-banner text-overlay" style="background-image: url('{{ settings.image }}');">
    <div class="text-center">
      {% if settings.title %}
        <h2>{{ settings.title }}</h2>
      {% endif %}
      {% if settings.button_text and settings.button_link %}
        <a href="{{ settings.button_link }}" class="btn">{{ settings.button_text }}</a>
      {% endif %}
    </div>
  </div>
{% elseif style == 'split' %}
  <div class="rasel-banner split-layout">
    <div class="image-side">
      <img src="{{ settings.image }}" alt="بنر">
    </div>
    <div class="text-side">
      {% if settings.title %}
        <h2>{{ settings.title }}</h2>
      {% endif %}
      {% if settings.button_text and settings.button_link %}
        <a href="{{ settings.button_link }}" class="btn">{{ settings.button_text }}</a>
      {% endif %}
    </div>
  </div>
{% endif %}
